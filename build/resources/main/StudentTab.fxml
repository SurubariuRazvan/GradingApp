<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="studentTab" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.StudentController">
    <children>
        <TableView fx:id="studentTable" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="studentTableId" maxWidth="35.0" minWidth="35.0" prefWidth="35.0" resizable="false" text="ID" />
                <TableColumn fx:id="studentTableFamilyName" maxWidth="80.0" minWidth="80.0" onEditCommit="#updateEntity" resizable="false" text="Nume" />
                <TableColumn fx:id="studentTableFirstName" maxWidth="80.0" minWidth="80.0" onEditCommit="#updateEntity" resizable="false" text="Prenume" />
            <TableColumn fx:id="studentTableGroup" maxWidth="50.0" minWidth="50.0" onEditCommit="#updateEntity" prefWidth="50.0" resizable="false" text="Grupa" />
                <TableColumn fx:id="studentTableEmail" maxWidth="1.7976931348623157E308" minWidth="100.0" onEditCommit="#updateEntity" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="studentTableProfessor" maxWidth="135.0" minWidth="135.0" onEditCommit="#updateEntity" prefWidth="135.0" resizable="false" text="Profesor" />
                <TableColumn fx:id="studentTableDelete" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" resizable="false" text="Delete" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <GridPane maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="SOMETIMES">
            <columnConstraints>
                <ColumnConstraints maxWidth="35.0" minWidth="35.0" prefWidth="35.0" />
                <ColumnConstraints hgrow="ALWAYS" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.0" minWidth="135.0" prefWidth="135.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="20.0" />
                <RowConstraints />
                <RowConstraints minHeight="10.0" prefHeight="20.0" />
                <RowConstraints />
            </rowConstraints>
            <children>
                <TextField fx:id="searchId" onKeyTyped="#searchEntity" promptText="ID" GridPane.rowIndex="1" />
                <TextField fx:id="addId" editable="false" onKeyTyped="#removeBackground" promptText="ID" GridPane.rowIndex="3" />
                <TextField fx:id="searchFamilyName" onKeyTyped="#searchEntity" promptText="Nume" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="addFamilyName" onKeyTyped="#removeBackground" promptText="Nume" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Adaugare/Modificare" GridPane.columnSpan="7" GridPane.rowIndex="2" />
                <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Filtrare" GridPane.columnSpan="7" />
                <Button fx:id="clearButton" cache="true" mnemonicParsing="false" onAction="#clearFields" prefWidth="50.0" text="Clear" GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin>
                    <padding>
                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                    </padding>
                </Button>
                <Button fx:id="addButton" cache="true" mnemonicParsing="false" onAction="#addEntity" prefWidth="50.0" text="Add" wrapText="true" GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                    </padding>
                </Button>
                <TextField fx:id="searchFirstName" layoutX="45.0" layoutY="75.0" onKeyTyped="#searchEntity" promptText="Prenume" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="addFirstName" layoutX="125.0" layoutY="30.0" onKeyTyped="#removeBackground" promptText="Prenume" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField fx:id="searchEmail" layoutX="125.0" layoutY="30.0" onKeyTyped="#searchEntity" promptText="Email" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <TextField fx:id="addEmail" layoutX="125.0" layoutY="30.0" onKeyTyped="#removeBackground" promptText="Email" GridPane.columnIndex="4" GridPane.rowIndex="3" />
            <TextField fx:id="searchGroup" layoutX="125.0" layoutY="30.0" onKeyTyped="#searchEntity" promptText="Grupa" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <TextField fx:id="addGroup" layoutX="205.0" layoutY="30.0" onKeyTyped="#removeBackground" promptText="Grupa" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            <ComboBox fx:id="searchProfessorName" editable="true" prefWidth="150.0" promptText="Nume profesor" GridPane.columnIndex="5" GridPane.rowIndex="1" />
            <ComboBox fx:id="addProfessorName" editable="true" prefWidth="150.0" promptText="Nume profesor " GridPane.columnIndex="5" GridPane.rowIndex="3" />
            </children>
        </GridPane>
    </children>
</VBox>
