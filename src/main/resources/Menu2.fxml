<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="ui.MenuController">
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab text="Teme">
                <VBox alignment="CENTER">
                    <TableView fx:id="homeworkTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn maxWidth="35.0" minWidth="35.0" resizable="false" text="ID"/>
                            <TableColumn minWidth="100.0" text="Descriere"/>
                            <TableColumn minWidth="40.0" text="startWeek"/>
                            <TableColumn minWidth="50.0" text="deadlineWeek"/>
                            <TableColumn maxWidth="60.0" minWidth="60.0" resizable="false" text="Actiune"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <GridPane minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="SOMETIMES">
                        <columnConstraints>
                            <ColumnConstraints maxWidth="35.0" minWidth="35.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="40.0" prefWidth="40.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
                            <ColumnConstraints maxWidth="60.0" minWidth="60.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints prefHeight="20.0"/>
                            <RowConstraints/>
                            <RowConstraints prefHeight="20.0"/>
                            <RowConstraints/>
                        </rowConstraints>
                        <TextField fx:id="searchId" promptText="ID" GridPane.rowIndex="1">
                        </TextField>
                        <TextField fx:id="addId" promptText="ID" GridPane.rowIndex="3">
                        </TextField>
                        <TextField fx:id="searchDescription" promptText="Descriere"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1">
                        </TextField>
                        <TextField fx:id="addDescription" promptText="Descriere"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3">
                        </TextField>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308"
                               text="Adaugare/Modificare" GridPane.columnSpan="5" GridPane.rowIndex="2">
                        </Label>
                        <TextField fx:id="searchStartWeek" promptText="startWeek"
                                   GridPane.columnIndex="2" GridPane.rowIndex="1">
                        </TextField>
                        <TextField fx:id="addStartWeek" promptText="startWeek" GridPane.columnIndex="2"
                                   GridPane.rowIndex="3">
                        </TextField>
                        <TextField fx:id="searchDeadlineWeek" promptText="deadlineWeek"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1">
                        </TextField>
                        <TextField fx:id="addDeadlineWeek" promptText="deadlineWeek"
                                   GridPane.columnIndex="3" GridPane.rowIndex="3">
                        </TextField>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Filtrare"
                               GridPane.columnSpan="5">
                        </Label>
                        <Button fx:id="searchButton" cache="true" mnemonicParsing="false"
                                onAction="#searchHomework" prefWidth="50.0" text="Search" GridPane.columnIndex="4"
                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                GridPane.rowIndex="1" GridPane.valignment="CENTER"
                                GridPane.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="2.0" left="4.0" right="4.0" top="2.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="addButton" cache="true" mnemonicParsing="false"
                                onAction="#addHomework" prefWidth="50.0" text="Add"
                                GridPane.columnIndex="4" GridPane.halignment="CENTER"
                                GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"
                                GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="2.0" left="4.0" right="4.0" top="2.0"/>
                            </padding>
                        </Button>
                    </GridPane>
                </VBox>
            </Tab>
            <Tab text="Studenti"/>
            <Tab text="Profesori"/>
            <Tab text="Note"/>
        </TabPane>
    </center>
</BorderPane>
