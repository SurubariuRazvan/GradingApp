<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="professorTab" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="ui.gui.ProfessorController">
    <TableView fx:id="professorTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="professorTableId" maxWidth="35.0" minWidth="35.0" prefWidth="35.0" resizable="false"
                         text="ID"/>
            <TableColumn fx:id="professorTableFamilyName" maxWidth="100.0" minWidth="100.0"
                         onEditCommit="#updateEntity" prefWidth="100.0" resizable="false" text="Nume"/>
            <TableColumn fx:id="professorTableFirstName" maxWidth="100.0" minWidth="100.0"
                         onEditCommit="#updateEntity" prefWidth="100.0" resizable="false" text="Prenume"/>
            <TableColumn fx:id="professorTableEmail" maxWidth="1.7976931348623157E308" minWidth="100.0"
                         onEditCommit="#updateEntity" prefWidth="200.0" text="Email"/>
            <TableColumn fx:id="professorTableDelete" maxWidth="60.0" minWidth="60.0" prefWidth="60.0"
                         resizable="false" text="Delete"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <GridPane maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="SOMETIMES">
        <columnConstraints>
            <ColumnConstraints maxWidth="35.0" minWidth="35.0" prefWidth="35.0"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="100.0"
                               prefWidth="200.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="60.0" minWidth="60.0" prefWidth="60.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
        <TextField fx:id="searchId" onKeyTyped="#searchEntity" promptText="ID" GridPane.rowIndex="1"/>
        <TextField fx:id="addId" editable="false" onKeyTyped="#removeBackground" promptText="ID"
                   GridPane.rowIndex="3"/>
        <TextField fx:id="searchFamilyName" onKeyTyped="#searchEntity" promptText="Nume"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="addFamilyName" onKeyTyped="#removeBackground" promptText="Nume"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" text="Adaugare" GridPane.columnSpan="5" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="3.0" top="3.0"/>
            </GridPane.margin>
        </Label>
        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" text="Filtrare" GridPane.columnSpan="5">
            <GridPane.margin>
                <Insets bottom="3.0" top="3.0"/>
            </GridPane.margin>
        </Label>
        <Button fx:id="clearButton" cache="true" mnemonicParsing="false" onAction="#clearFields"
                prefWidth="50.0" text="Clear" GridPane.columnIndex="4" GridPane.halignment="CENTER"
                GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER"
                GridPane.vgrow="ALWAYS">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <padding>
                <Insets bottom="2.0" left="4.0" right="4.0" top="2.0"/>
            </padding>
        </Button>
        <Button fx:id="addButton" cache="true" mnemonicParsing="false" onAction="#addEntity" prefWidth="50.0"
                text="Add" wrapText="true" GridPane.columnIndex="4" GridPane.halignment="CENTER"
                GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER"
                GridPane.vgrow="ALWAYS">
            <padding>
                <Insets bottom="2.0" left="4.0" right="4.0" top="2.0"/>
            </padding>
        </Button>
        <TextField fx:id="searchFirstName" layoutX="45.0" layoutY="75.0" onKeyTyped="#searchEntity"
                   promptText="Prenume" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="addFirstName" layoutX="125.0" layoutY="30.0" onKeyTyped="#removeBackground"
                   promptText="Prenume" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <TextField fx:id="searchEmail" layoutX="125.0" layoutY="30.0" onKeyTyped="#searchEntity"
                   promptText="Email" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <TextField fx:id="addEmail" layoutX="125.0" layoutY="30.0" onKeyTyped="#removeBackground"
                   promptText="Email" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>
