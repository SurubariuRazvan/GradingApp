<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="gradeTab" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="ui.GradeController">
    <children>
        <TableView fx:id="homeworkTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="gradeTableHomework" maxWidth="1.7976931348623157E308" minWidth="80.0"
                             onEditCommit="#updateField" resizable="false" text="Tema"/>
                <TableColumn fx:id="gradeTableStudent" maxWidth="35.0" minWidth="100.0" prefWidth="100.0"
                             resizable="false" text="Student"/>
                <TableColumn fx:id="gradeTableGivenGrade" maxWidth="1.7976931348623157E308" minWidth="40.0"
                             onEditCommit="#updateField" prefWidth="40.0" resizable="false" text="Nota"/>
                <TableColumn fx:id="gradeTableProfessor" maxWidth="1.7976931348623157E308" minWidth="100.0"
                             onEditCommit="#updateField" prefWidth="100.0" resizable="false" text="Profesor"/>
                <TableColumn fx:id="gradeTableHandOverDate" maxWidth="1.7976931348623157E308" minWidth="70.0"
                             onEditCommit="#updateField" prefWidth="70.0" resizable="false" text="Data"/>
                <TableColumn fx:id="gradeTableFeedback" maxWidth="1.7976931348623157E308" minWidth="100.0"
                             onEditCommit="#updateField" prefWidth="200.0" text="Feedback"/>
                <TableColumn fx:id="gradeTableUpdate" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" resizable="false"
                             text="Update"/>
                <TableColumn fx:id="gradeTableDelete" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" resizable="false"
                             text="Delete"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <GridPane maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="SOMETIMES">
            <columnConstraints>
                <ColumnConstraints maxWidth="80.0" minWidth="80.0" prefWidth="80.0"/>
                <ColumnConstraints maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="70.0" minWidth="70.0" prefWidth="70.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="100.0"
                                   prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="60.0" minWidth="60.0" prefWidth="60.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="20.0"/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="20.0"/>
                <RowConstraints/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                       maxWidth="1.7976931348623157E308" text="Adaugare/Modificare" GridPane.columnSpan="7"
                       GridPane.rowIndex="2"/>
                <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                       maxWidth="1.7976931348623157E308" text="Filtrare" GridPane.columnSpan="7"/>
                <Button fx:id="clearButton" cache="true" mnemonicParsing="false" onAction="#clearFields"
                        prefWidth="50.0" text="Clear" GridPane.columnIndex="6" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER"
                        GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0"/>
                    </padding>
                </Button>
                <Button fx:id="addButton" cache="true" mnemonicParsing="false" onAction="#addHomework" prefWidth="50.0"
                        text="Add" wrapText="true" GridPane.columnIndex="6" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER"
                        GridPane.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0"/>
                    </padding>
                </Button>
                <ComboBox fx:id="HomeworkId" prefWidth="150.0" promptText="Nr. tema" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets left="-5.0" right="-5.0"/>
                    </padding>
                </ComboBox>
                <ComboBox fx:id="searchHomeworkId" layoutX="10.0" layoutY="71.0" prefWidth="150.0" promptText="Nr. tema"
                          GridPane.rowIndex="1">
                    <padding>
                        <Insets left="-5.0" right="-5.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </ComboBox>
                <TextField fx:id="searchStudentName" promptText="Nume student" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                <TextField fx:id="studentName" promptText="Nume student" GridPane.columnIndex="1"
                           GridPane.rowIndex="3"/>
                <TextField fx:id="searchGivenGrade" promptText="Nota" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="givenGrade" promptText="Nota" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <TextField fx:id="searchProfessorName" promptText="Nume profesor" GridPane.columnIndex="3"
                           GridPane.rowIndex="1"/>
                <TextField fx:id="professorName" promptText="Nume profesor" GridPane.columnIndex="3"
                           GridPane.rowIndex="3"/>
                <DatePicker fx:id="searchHandOverDate" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <DatePicker fx:id="handOverDate" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
                <TextField promptText="Feedback" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
                <TextField promptText="Feedback" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
</VBox>
